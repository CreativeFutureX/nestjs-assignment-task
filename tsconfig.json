{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@auth/*": ["src/auth/*"],
      "@cats/*": ["src/cats/*"],
      "@core/*": ["src/core/*"],
      "@users/*": ["src/users/*"],
      "@favorite/*": ["src/favorite/*"]
    }
  },
  "include": ["src/**/*"]
}
